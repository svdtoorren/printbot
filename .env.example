# Microsoft Azure AD / Entra ID Application credentials
TENANT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
CLIENT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
CLIENT_SECRET=your_client_secret_here

# Exchange Online mailbox to monitor
MAILBOX_UPN=orders@yourdomain.tld

# Mail folder name to poll (case-sensitive)
MAIL_FOLDER=PrintOrders

# Filter: only process emails from this sender (OPTIONAL)
# Leave empty to process emails from ALL senders
# Set to specific email to filter by sender
FILTER_SENDER=orders@supplier.com

# CUPS printer name (get via 'lpstat -p' on the Pi)
PRINTER_NAME=YourPrinterName

# Polling interval in seconds
POLL_SECONDS=60

# Directory for state database (SQLite)
STATE_DIR=/var/lib/printbot

# Dry-run mode: simulate printing without actual CUPS command (true/false)
# Useful for testing folder moves without needing a configured printer
DRY_RUN=false
